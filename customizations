UAB_GIT_REPO_M="https://${UAB_APT_M}/git/git-repo"

echo "Using APT mirror '${UAB_APT_M}'"
echo "Using APT security mirror '${UAB_APT_SEC_M}'"
echo "Using git-repo mirror '${UAB_GIT_REPO_M}'"

export UAB_APT_M UAB_APT_SEC_M UAB_GIT_REPO_M
